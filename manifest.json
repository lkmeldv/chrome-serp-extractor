{
  "manifest_version": 3,
  "name": "Universal SERP & URL Extractor",
  "version": "2.1",
  "description": "Extraire les URLs depuis Google SERP et toutes les URLs depuis n'importe quelle page web",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Universal Extractor"
  }
}