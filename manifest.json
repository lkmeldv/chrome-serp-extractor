{
  "manifest_version": 3,
  "name": "SERP Extractor",
  "version": "1.0",
  "description": "Extraire les URLs, titres et meta descriptions de Google SERP",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://www.google.com/*",
    "https://google.com/*",
    "https://*.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://google.com/search*",
        "https://*.google.com/search*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SERP Extractor"
  }
}